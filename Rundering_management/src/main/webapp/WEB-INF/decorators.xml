<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/decorator">

	<decorator name="adminMain" page="admin_main_decorator.jsp">
		<pattern>/admin/*.do</pattern>
	</decorator>
	
	<decorator name="adminDaterangepicker" page="admin_daterange_decorator.jsp">
		<pattern>/admin/laundryorder.do</pattern>
	</decorator>
	
	<decorator name="branchMain" page="branch_main_decorator.jsp">
		<pattern>/branch/*.do</pattern>
		<pattern>/branch/board/suggest/regist.do</pattern>
	</decorator>
	
	<decorator name="deliveryPage" page="delivery_decorator.jsp">
		<pattern>/fordelivery/*.do</pattern>
	</decorator>
		
	<decorator name="openWindow" page="open_decorator.jsp">
		<pattern>/admin/**/**/*.do</pattern>
		<pattern>/branch/**/**/*.do</pattern>
		<pattern>/admin/delivery/detail.do</pattern>
		<pattern>/admin/ordergoods/regist.do</pattern>
		<pattern>/admin/customerdetail.do</pattern>
		<pattern>/admin/branchdetail.do</pattern>
		<pattern>/admin/customer/dormant_detail.do</pattern>
		<pattern>/admin/branchorder/detail.do</pattern>
		<pattern>/admin/laundryorder/detail.do</pattern>
		<pattern>/admin/laundryitems/regist.do</pattern>
		<pattern>/branch/iteamorder/detail.do</pattern>
		<!-- <pattern>/main.do</pattern> -->
	</decorator>
	
	<!-- decoration을 적용하지 않으려는 파일을 <excludes> 에 등록 -->
	<excludes>
		<pattern>/resources/*</pattern>
		<pattern>/login.do</pattern>
		<pattern>/fordelivery/login.do</pattern>
	</excludes>


</decorators>